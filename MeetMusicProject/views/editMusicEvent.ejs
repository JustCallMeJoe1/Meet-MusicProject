<%- include("./partials/header.ejs") %>
<!-- Make to fill in all info from current event when user wants to update. -->
            <main>
                <div id="formContainer">
                    <h1 id="formHeader">Edit <%= pickedEvent.name %></h1>
                    <!-- Make sure the form has an action that sends it to the connections page, will perform this action when submit button pressed (Will post to DB later on in development)-->
                    <form id="newMusicForm" method="POST" action="/events/<%= pickedEvent.id %>?_method=PUT">
                        <fieldset id="importantEventInfo" class="formDivider">
                            <legend class="newEventLegend">Event Information</legend>
                            <div class="formComponent" id="firstComp">
                                <label class="formLabel" for="topic">Music Event Category: </label>
                                <input type="text" id="topic" maxlength="50" minlength="1" name="topic" value="<%= pickedEvent.topic %>" required />
                                <br>
                                <label class="formLabel" for="eventTitle">Event Title: </label>
                                <input type="text" id="eventTitle" maxlength="50" minlength="1" name="name" value="<%= pickedEvent.name %>" required /> 
                            </div>
                        </fieldset>

                        <fieldset id="eventDetails" class="formDivider">
                            <legend class="newEventLegend">Event Details</legend>
                            <div class="formComponent" id="secondComp">
                                <label class="formLabel" for="additionalEventInfo">Details: </label>
                                <textarea id="additionalEventInfo" rows="5" cols="25" name="details" minlength="5" maxlength="500" required ><%= pickedEvent.details %></textarea>
                                <br>
                                <label class="formLabel" for="eventWhere">Event Location: </label>
                                <input id="eventWhere" type="text" maxlength="150" minlength="1" name="location" value="<%= pickedEvent.location %>" required />
                                <br>
                                <label class="formLabel" for="eventImage">Event Image: </label>
                                <input id="eventImage" type="text" name="image" value="<%= pickedEvent.image %>" required />
                            </div>
                        </fieldset>

                        <fieldset id="eventTimeDetails" class="formDivider">
                            <legend class="newEventLegend">Event Time Details</legend>
                            <div class="formComponent" id="thirdComp">
                                <label class="formLabel" for="eventDate">Event Date: </label>
                                <input id="eventDate" type="date" name="date" value="<%= pickedEvent.date %>" required />
                                <br>
                                <label class="formLabel" for="eventStart">Start Time: </label>
                                <input id="eventStart" type="time" name="startTime" value="<%= pickedEvent.startTime %>" required />
                                <br>
                                <label class="formLabel" for="eventEnd">End Time: </label>
                                <input id="eventEnd" type="time" name="endTime" value="<%= pickedEvent.endTime %>" required />
                            </div>
                        </fieldset>

                        <div id="submitContainer">
                            <button type="submit" id="submitButton" value="Update Event">Update Event</button>
                        </div>
                    </form>
                </div>
            </main>
<%- include("./partials/footer.ejs") %>